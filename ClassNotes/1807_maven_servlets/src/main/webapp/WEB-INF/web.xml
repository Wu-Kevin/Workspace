<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<context-param>
		<param-name>Best QB All Time</param-name>
		<param-value>Peyton Manning</param-value>
	</context-param>
	<servlet>
		<servlet-name>Login</servlet-name>
		<display-name>Login</display-name>
		<description></description>
		<servlet-class>com.revature.servlets.Login</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>ServletContextConfig</servlet-name>
		<display-name>ServletContextConfig</display-name>
		<description></description>
		<servlet-class>com.revature.servlets.ServletContextConfig</servlet-class>
		<init-param>
			<param-name>
				Best QB
			</param-name>
			<param-value>
				Tom Brady
			</param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>One</servlet-name>
		<display-name>One</display-name>
		<description></description>
		<servlet-class>com.revature.servlets.One</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>Two</servlet-name>
		<display-name>Two</display-name>
		<description></description>
		<servlet-class>com.revature.servlets.Two</servlet-class>
		<init-param>
			<param-name> Quarterback </param-name>
			<param-value> Drew Brees </param-value>
		</init-param>
	</servlet>
	<servlet>
		<servlet-name>Three</servlet-name>
		<display-name>Three</display-name>
		<description></description>
		<servlet-class>com.revature.servlets.Three</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>*.do</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ServletContextConfig</servlet-name>
		<url-pattern>/ServletContextConfig</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>One</servlet-name>
		<url-pattern>/One</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Two</servlet-name>
		<url-pattern>/Two</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>Three</servlet-name>
		<url-pattern>/Three</url-pattern>
	</servlet-mapping>
	<error-page>
		<error-code> 400 </error-code>
		<location>login.html</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>oops.do</location>
	</error-page>
	
</web-app>
